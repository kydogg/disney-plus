{
  "name": "disney-plus-clone-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Disney Plus Clone - Full-stack streaming platform with Next.js frontend and Express.js backend",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build": "npm run build:frontend && npm run build:backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/disney-plus-clone"
  },
  "keywords": [
    "disney-plus",
    "streaming",
    "nextjs",
    "express",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT"
}
